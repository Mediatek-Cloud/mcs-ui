{
  "name": "mcs-ui",
  "version": "0.1.5",
  "description": "mcs-ui",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "build-storybook": "build-storybook",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "start-storybook -p 6006",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report",
    "eslint": "eslint ./",
    "format": "prettier --write '**/*.{js,json,md}' '*.{json,md,js}'",
    "changelog": "github-changes -o Mediatek-Cloud -r mcs-ui -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "dependencies": {
    "d3-color": "^1.2.3",
    "date-fns": "^2.0.0-alpha.22",
    "debug": "^4.1.0",
    "prop-types": "^15.6.2",
    "raf-throttle": "^2.0.3",
    "ramda": "^0.25.0",
    "react-overlay-pack": "^3.0.0",
    "react-spring": "^5.9.2",
    "react-virtualized": "^9.20.1"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "styled-components": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@storybook/addon-actions": "4.0.0-rc.2",
    "@storybook/addon-info": "4.0.0-rc.2",
    "@storybook/addon-links": "4.0.0-rc.2",
    "@storybook/addon-options": "4.0.0-rc.2",
    "@storybook/addon-storyshots": "4.0.0-rc.2",
    "@storybook/addon-storysource": "4.0.0-rc.2",
    "@storybook/react": "4.0.0-rc.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-require-context-hook": "1.0.0",
    "babel-plugin-styled-components": "1.8.0",
    "codecov": "3.1.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "enzyme-to-json": "3.3.4",
    "eslint": "5.7.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-flowtype": "3.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.26.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.83.0",
    "flow-coverage-report": "0.6.0",
    "github-changes": "1.1.2",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "jest-specific-snapshot": "1.0.0",
    "jest-styled-components": "6.2.2",
    "lint-staged": "7.3.0",
    "nwb": "0.23.0",
    "polished": "2.3.0",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "styled-components": "4.0.2"
  },
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "homepage": "https://github.com/Mediatek-Cloud/mcs-ui#readme",
  "license": "MIT",
  "repository": "https://github.com/Mediatek-Cloud/mcs-ui",
  "keywords": [
    "mcs",
    "mcs-ui",
    "mcs-lite-ui",
    "react"
  ],
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "require-context-hook",
          "@babel/plugin-proposal-class-properties",
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true,
              "preprocess": false,
              "minify": false
            }
          ]
        ],
        "presets": [
          [
            "@babel/preset-env"
          ],
          "@babel/preset-react",
          "@babel/preset-flow"
        ]
      }
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/es/",
      "<rootDir>/lib/"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageThreshold": {
      "global": {
        "branches": 73,
        "functions": 75,
        "lines": 79,
        "statements": 77
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "flow-coverage-report": {
    "concurrentFiles": 5,
    "globIncludePatterns": [
      "**/*.js"
    ],
    "globExcludePatterns": [
      "node_modules/**",
      "public/**",
      "lib/**",
      "es/**",
      "coverage/**",
      "storybook-static/**",
      "flow-typed/**"
    ],
    "reportTypes": [
      "text"
    ],
    "threshold": 91
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended",
      "plugin:jest/recommended",
      "prettier",
      "prettier/react",
      "prettier/flowtype"
    ],
    "plugins": [
      "prettier",
      "jest",
      "flowtype"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "prettier/prettier": "error",
      "import/no-named-as-default": 0,
      "import/no-extraneous-dependencies": 0,
      "react/require-default-props": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "route"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
